<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SupportFlow</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- CSS principal do site -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Estilo específico da área de usuário -->
    <link rel="stylesheet" href="~/css/user-dashboard.css" asp-append-version="true" /> 
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />

</head>
<body style="background: #0f1724; color: #e6eef6;">

    <!-- Cabeçalho customizado -->
    @if (ViewData["MostrarHeader"] == null || (bool)ViewData["MostrarHeader"])
    {
        <header class="p-3 mb-4 border-bottom" style="background:#0b1220;">
            <div class="container d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center gap-3">
                    <div class="rounded-3 d-flex justify-content-center align-items-center"
                         style="width:46px;height:46px;background:linear-gradient(135deg,#06b6d4,#3b82f6);font-weight:700">
                        SF
                    </div>
                    <div>
                        <h1 class="h5 m-0 text-light">SupportFlow</h1>
                        <small class="text-muted">Painel do Usuário</small>
                    </div>
                </div>
                <div>
                    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-light btn-sm">Sair</a>
                </div>
            </div>
        </header>
    }
    
    <!-- Conteúdo dinâmico -->
    <div class="container mb-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
